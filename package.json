{
  "name": "@vodyani/eslint-config",
  "license": "MIT",
  "version": "0.0.0",
  "author": "ChoGathK",
  "description": "📏 With a little preparation, the typescript eslint generic rules for vodyani may be readily integrated into projects.",
  "homepage": "https://github.com/vodyani/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vodyani/eslint-config.git"
  },
  "keywords": [
    "vodyani",
    "javascript",
    "npm-package"
  ],
  "bugs": {
    "url": "https://github.com/vodyani/eslint-config/issues"
  },
  "files": [
    "package.json",
    "README.MD",
    "LICENSE",
    "dist",
    "index.js",
    "rules"
  ],
  "main": "index.js",
  "scripts": {
    "install:all": "npm i && npx husky install",
    "build": "rm -rf dist && tsc",
    "lint": "eslint ./src ./test && tsc",
    "lint:fix": "eslint --fix --ext .ts src/ test/",
    "lint:report:html": "eslint ./src ./test -f html -o eslint-report.html",
    "lint:report:json": "eslint ./src ./test -f json -o eslint-report.json",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "version:patch": "npm version patch && npm run version:tag && npm run version:commit",
    "version:minor": "npm version minor && npm run version:tag && npm run version:commit",
    "version:major": "npm version major && npm run version:tag && npm run version:commit",
    "version:tag": "git tag -a \"$npm_package_version\" -m \"$npm_package_version\"",
    "version:commit": "git add . && git commit -m \"chore(publish): publish v$npm_package_version\""
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "5.14.0",
    "@typescript-eslint/parser": "5.14.0",
    "eslint": "7.32.0",
    "eslint-plugin-import": "^2.25.4"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "5.14.0",
    "@typescript-eslint/parser": "5.14.0",
    "eslint": "7.32.0",
    "eslint-plugin-import": "^2.25.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "husky": "7.0.4"
  }
}
